<script>
/* ===== DATA ===== */
const users = JSON.parse(localStorage.getItem("users")||"[]");
const subs  = JSON.parse(localStorage.getItem("subs")||"[]");
let cart    = JSON.parse(localStorage.getItem("cart")||"[]");

/* ===== AUTH ===== */
function signup(){
  const user={email:suEmail.value,role:suRole.value};
  users.push(user);
  localStorage.setItem("users",JSON.stringify(users));
  localStorage.setItem("session",JSON.stringify(user));
  location.href="dashboard.html";
}
function login(){
  const u=users.find(x=>x.email===liEmail.value);
  if(!u){alert("User not found");return}
  localStorage.setItem("session",JSON.stringify(u));
  location.href="dashboard.html";
}
function toggle(){
  signupForm.classList.toggle("hidden");
  loginForm.classList.toggle("hidden");
}

/* ===== SUBSCRIBE ===== */
function subscribe(){
  if(!subs.includes(subEmail.value)){
    subs.push(subEmail.value);
    localStorage.setItem("subs",JSON.stringify(subs));
    alert("Subscribed!");
  }
}

/* ===== MODAL + CART ===== */
function openModal(){modal.classList.remove("hidden")}
function closeModal(){modal.classList.add("hidden")}
function addToCart(){
  cart.push({license:license.value,qty:qty.value});
  localStorage.setItem("cart",JSON.stringify(cart));
  alert("Added to cart");
  closeModal();
}
</script>
